<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".NotificationsFragment">

    <TextView
        android:id="@+id/notificationsTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/noNotificationsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have no new notifications!"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible"/>

    <!--
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notificationsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/notificationsTitleTextView"
        android:visibility="gone"
        tools:listitem="@layout/item_notification_placeholder" />
    -->

</RelativeLayout>